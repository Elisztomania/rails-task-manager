<h1><%= @task.title %></h1>

<div class=details><p><%= @task.details %></p></div>

<div class="show_task_c">
  <%= simple_form_for(@task) do |f| %>
      <%= f.input_field :completed, as: :boolean %>
  <% end %>
  <% if @task.completed %>
    <p> This task is completed</p>
  <% else %>
    <p>This task is not completed</p>
  <% end %>
</div>

<p><%= link_to 'Back to list', tasks_path %></p>
<p><%= link_to 'Edit a task', task_edit_path %></p>
